assembleCCStore {
  tasks = [":module21:module02:assembleDebug"]
  gradle-args = ["--configuration-cache", "--configuration-cache-problems=warn"]
  clear-configuration-cache-state-before=BUILD
}

sync {
    android-studio-sync {
      studio-jvm-args = ["-Xms256m", "-Xmx6g"]
    }    
}
